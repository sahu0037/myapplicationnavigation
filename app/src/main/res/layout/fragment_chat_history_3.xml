<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.ChatFragment"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Chat Bot"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chat1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Botty"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Hello friend! Hope you are well!" />

        <TextView
            android:id="@+id/chat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am! Actually I just thought of you."
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/chat3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Botty"
            android:textSize="18sp" />
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aww, that's sweet. You are a precious friend to me too."
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/chat4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You"
            android:textSize="18sp" />
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There is one thing I would like you to be updated though. I think you would look much more awesome in pink. The app should allow users to change your color to pink."
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/chat5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Botty"
            android:textSize="18sp" />
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay, thank you for your feedback. Your information is getting sent to a relevent person to handle. Pink would be cute!"
            android:textAllCaps="false" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bot_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </ScrollView>

